- required_engine_version: 2

- macro: psp_enabled
  condition: (always_true)

- list: psp_images
  items: {{ p.image_list }}

- macro: psp_container
  condition: (psp_enabled and kevt and pod and kcreate and ka.req.container.image.repository in (psp_images))

- rule: PSP Validation Failure Privileged
  desc: >
    Detect a psp validation failure for privileged pod condition
  condition: psp_container and ka.req.container.privileged != {{ p.privileged }}
  output: Pod Security Policy {{ p.policy_name }} validation failure for privileged condition (user=%ka.user.name pod=%ka.resp.name ns=%ka.target.namespace image=%ka.req.container.image)
  priority: WARNING
  source: k8s_audit
  tags: [k8s-psp]
